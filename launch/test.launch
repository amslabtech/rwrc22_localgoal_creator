    <arg name="node_edge_map_file" default="/home/amsl/catkin_ws/src/rwrc23/map/graph/ikuta_graph.yaml"/>
    <arg name="checkpoint_file" default="/home/amsl/catkin_ws/src/rwrc23/map/checkpoint/ikuta_full_checkpoint.yaml"/>
